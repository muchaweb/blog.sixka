/**
* ---------------------------------------------------------
* Settings.
* ----------------------------------------------------------
**/

@import url("http://fonts.googleapis.com/css?family=Roboto:400,400italic,500,500italic,700,700italic");

//* Color scheme */

// /* Red base scheme */
$color-black-0 = #919090;
$color-black-1 = #5C5C5C;
$color-black-2 = #202020;
$color-black-3 = #000000;
$color-black-4 = #030202;


//* Typography */
$base-font-size   = 1em;
$base-font-sans   = "Open Sanas", sans-serif;
$base-font-bolder  = "Oswald", sans-serif;
$base-font-height = $base-font-size * 1.3;

//* Colors */
$color-link       = #4183C4;
$color-link-hover = #333;
$color-text       = #333;
$color-text-light = #777;
$color-hr         = #EEE;

//* Colors social media */
$color-facebook  = #3B5998;
$color-twitter   = #2EB3E5;
$color-google    = #DD4B39;
$color-pinterest = #CB2027;

//* Positioning */
$margin-multiplier = 1.5;
$margin-general    = $base-font-height * $margin-multiplier;
